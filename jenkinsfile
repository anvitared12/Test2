pipeline {
    agent any
    tools {
        maven 'maven'  // Use the exact name you set in Global Tool Configuration
    }
    stage{
        stage('Checkout Code'){
            steps{
                git url:'https://github.com/anvitared12/Jenkins.git',branch:main
            }
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Hello') {
            steps {
                script {
                    
                     echo 'Hello World'
                }
            }
        }
    }
}

